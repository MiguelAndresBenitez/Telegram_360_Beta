# Archivo de ejemplo para producci√≥n. Copiar a .env.prod y rellenar valores.
SECRET_KEY=changeme_replace_with_strong_secret
NODE_ENV=production
ALLOWED_HOSTS=your-domain.com

# Postgres (DATABASE_URL con formato: postgres://user:pass@host:5432/dbname)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme
POSTGRES_DB=telegram360
DATABASE_URL=postgres://postgres:changeme@db:5432/telegram360

# Redis (cache/broker)
REDIS_URL=redis://redis:6379/0

# RabbitMQ (opcional para workers)
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/

# Sentry (opcional)
SENTRY_DSN=

# SMTP para notificaciones/emails
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# Otros
ALLOWED_ORIGINS=https://your-domain.com
